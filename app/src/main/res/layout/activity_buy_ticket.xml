<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="expark.com.totenclient.BuyTicket"
    android:background="#E7E8EA"
    >

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint="Placa"
        android:id="@+id/plate_input"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/time_input" />

    <TextView
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vaga"
        android:id="@+id/textView8"
        android:layout_below="@+id/plate_input"
        android:layout_alignStart="@+id/plate_input" />

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/space_input"
        android:hint="Vaga"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placa"
        android:id="@+id/textView9"
        android:layout_alignStart="@+id/plate_input" />

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Tempo de permanencia em minutos"
        android:ems="10"
        android:id="@+id/time_input"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="true" />

    <Button
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="Comprar Tiquete"
        android:id="@+id/button4"
        android:textColor="@android:color/white"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/time_input"
        android:onClick="buyRequisition" />

    <TextView
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tempo de Permanencia"
        android:id="@+id/textView7"
        android:layout_below="@+id/space_input"
        android:layout_alignStart="@+id/space_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tempo minimo de 30 minutos\n e mÃ¡ximo de 2 horas"
        android:id="@+id/textView12"
        android:layout_below="@+id/time_input"
        android:layout_alignStart="@+id/time_input"
        android:textColor="#ff1e940d" />

</RelativeLayout>
