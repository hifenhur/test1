<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="expark.com.totenclient.BuyTicket"
    android:background="#E7E8EA"
    android:id="@+id/n">

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:hint="Placa"
        android:id="@+id/plate_input"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vaga"
        android:id="@+id/textView8"
        android:layout_below="@+id/plate_input"
        android:layout_alignStart="@+id/space_input" />

    <EditText
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/space_input"
        android:hint="Vaga"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Placa"
        android:id="@+id/textView9"
        android:layout_alignStart="@+id/plate_input" />

    <Button
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="Comprar Tiquete"
        android:id="@+id/button4"
        android:textColor="@android:color/white"
        android:onClick="buyRequisition"
        android:layout_below="@+id/radio_car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tempo de Permanencia"
        android:id="@+id/textView7"
        android:layout_below="@+id/space_input"
        android:layout_alignStart="@+id/thirty" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car"
        android:id="@+id/radio_car"
        android:checked="true"
        android:onClick="onVehicleRadioClick"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/ninety"
        android:layout_alignEnd="@+id/ninety" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motorcycle"
        android:id="@+id/motorcicle_radio"
        android:checked="false"
        android:onClick="onVehicleRadioClick"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/one_hundred_and_twenty" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minutos"
        android:id="@+id/thirty"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/button4"
        android:checked="true"
        android:onClick="onTimeChooseRadioClick" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 minutos"
        android:id="@+id/sixty"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/button4"
        android:checked="false"
        android:onClick="onTimeChooseRadioClick" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90 minutos"
        android:id="@+id/ninety"
        android:layout_below="@+id/thirty"
        android:layout_alignStart="@+id/thirty"
        android:checked="false"
        android:onClick="onTimeChooseRadioClick" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 minutos"
        android:id="@+id/one_hundred_and_twenty"
        android:layout_below="@+id/sixty"
        android:layout_alignStart="@+id/sixty"
        android:checked="false"
        android:onClick="onTimeChooseRadioClick" />

    <TextView
        android:layout_width="290sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VeÃ­culo"
        android:id="@+id/textView12"
        android:layout_above="@+id/motorcicle_radio"
        android:layout_alignStart="@+id/ninety" />

</RelativeLayout>
