<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffe7e8ea">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/expark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:text="Cadastrar"
        android:id="@+id/button"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:onClick="launchSignIn"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:text="Comprar CrÃ©dito"
        android:id="@+id/button2"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:onClick="launchCreditBuy"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/button3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:text="Comprar Ticket"
        android:id="@+id/button3"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:onClick="launchTicketBuy"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
